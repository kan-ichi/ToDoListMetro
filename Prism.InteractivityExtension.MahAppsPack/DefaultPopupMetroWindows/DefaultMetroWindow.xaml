<controls:MetroWindow x:Class="Prism.InteractivityExtension.MahAppsPack.DefaultPopupMetroWindows.DefaultMetroWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      TitleCharacterCasing="Normal">
    <controls:MetroWindow.Style>
        <Style TargetType="{x:Type controls:MetroWindow}">
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
        </Style>
    </controls:MetroWindow.Style>
    <controls:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Prism.InteractivityExtension.MahAppsPack;component/MetroWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:MetroWindow.Resources>
</controls:MetroWindow>
